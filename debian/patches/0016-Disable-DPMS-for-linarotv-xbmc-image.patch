From: Avik Sil <avik.sil@linaro.org>
Date: Tue, 21 Feb 2012 16:19:57 +0530
Subject: [PATCH] Disable DPMS for linarotv-xbmc image

---
 tools/Linux/xbmc-standalone.sh.in |    4 ++++
 1 files changed, 4 insertions(+), 0 deletions(-)

diff --git a/tools/Linux/xbmc-standalone.sh.in b/tools/Linux/xbmc-standalone.sh.in
index 680f19a..3f3070c 100644
--- a/tools/Linux/xbmc-standalone.sh.in
+++ b/tools/Linux/xbmc-standalone.sh.in
@@ -22,6 +22,7 @@ prefix="@prefix@"
 exec_prefix="@exec_prefix@"
 bindir="@bindir@"
 XBMC="${bindir}/xbmc --standalone $@"
+HOSTNAME=`cat /etc/hostname`
 
 @XBMC_STANDALONE_SH_PULSE@
 
@@ -31,6 +32,9 @@ LASTSUCCESSFULSTART=$(date +%s)
 
 while [ $(( $LOOP )) = "1" ]
 do
+  if [ $HOSTNAME = "linarotv-xbmc" ]; then
+    xset -dpms
+  fi
   $XBMC
   RET=$?
   NOW=$(date +%s)
